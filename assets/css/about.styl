@import '_settings'
@import '_animations'
@import 'jeet'



.about-page
  h2
    font-size: 20px;
    font-size: 2rem;
    line-height: 1;
    letter-spacing: 2px;
    max-width: 500px;

  .hero-boxes
    clearfix()
    margin-top: 35px
    margin-bottom: 55px
    text-align: center
  
  .hero-container
    text-align: initial
    display: inline-block
    
  .hero-box
    width: 45%
    min-height: 715px
    background-color: #F6F6F6
    box-sizing: border-box
    padding: 31px 56px
    position: relative
    float: left
    &.left
      margin-right: 10%

    +between(981px, 1100px)
      width: 47.5%
      &.left
        margin-right: 5%

    +below(980px)
      width: 100%
      min-height: auto
      &.left
        margin-right: 0
        margin-bottom: 55px

    +between(861px, 1100px)
      padding: 25px 45px
    +between(546px, 860px)
      padding: 25px 30px
    +below(545px)
      padding: 25px 20px

  .artist-statement
    letter-spacing: 0.5px
    h2
      color: #3B3D44
      font-family: raleway
      text-transform: uppercase
      font-size: 1em
      text-align: center
      margin-bottom: 2em
    p
      font-size: 1.25em
      margin: 15px 0
      color: rgb(0,0,0)
      margin: 0 0 25px;
      font-size: 18px;
      line-height: 1.5;
      font-weight: 300;
      letter-spacing: 1px
  
  .profile
    clearfix()
    .profile-img
      padding: -300px
      background-color: #FFF
      margin: 0 auto
      
      +above(981px)
        max-width: 300px
      +below(980px)
        max-width: 250px
        padding: 15px
      
      +between(680px, 980px)
        float: left
        margin: 15px 100px 15px 0
      +between(680px, 780px)
        margin-right: 50px
        
      img
        display: block
        width: 100%
    nav
      display: inline-block
      width: auto
      margin-top: 15px
      +above(981px)
        margin-top: 30px
        align(horizontal)
        position: relative
      +below(680px)
        align(horizontal)
        position: relative
      
      ul
        margin: 0.5em 0 1.5em
      b
        color: #3B3D44
        font-family: raleway
        text-transform: uppercase
        letter-spacing: 1px
        margin: 1em 0 0.5em
      a
        color: #0e8eb5
  
  article
    center(980px)
    
    h2
      color: #A3A6AC
      font-family: raleway
      text-transform: uppercase
      font-size: 2.5em
      font-weight: 300
      text-align: center
  
    img
      max-width: 500px
      width: 100%
      display: block
      margin: 1em auto
  
  .process
    p
      max-width: 750px
      text-align: center
      margin: 0 auto

  .quote
    margin-top: 50px
    background-color: #000
    color: #FFF
    text-align: center
    .content
      padding: 10px
    h2
      font-family: raleway
      text-transform: uppercase
      font-size: 1.5em
      font-weight: normal
      letter-spacing: 1.5px
      font-weight 100
    p
      font-size: 1em
      letter-spacing: 0.5px
      max-width: 850px
      margin: 1em auto
  
  .quote-img
    background-image: url('../img/about/quote.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position: center 80%
    height: 200px